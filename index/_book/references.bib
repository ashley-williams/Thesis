  year = {2011},
  keywords = {Biofilm,Hg-bioremediation,Hg-resistant bacteria,Hg2+ volatilization,Pseudomonas,Psychrobacter},
  pages = {85-91},
  file = {C\:\\Users\\asw\\Zotero\\storage\\Q926KZEQ\\Pepi et al. - 2011 - Mercury-resistant bacterial strains Pseudomonas an.pdf;C\:\\Users\\asw\\Zotero\\storage\\GCMV4WX9\\S0964830510001678.html}
