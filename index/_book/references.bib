  month = may,
  year = {2011},
  keywords = {mercury bioavailability,mercury detoxification},
  pages = {8714-8719},
  file = {C\:\\Users\\asw\\Zotero\\storage\\UKC2ZWT7\\Schaefer et al. - 2011 - Active transport, substrate specificity, and methy.pdf;C\:\\Users\\asw\\Zotero\\storage\\WWEMIAHK\\8714.html},
