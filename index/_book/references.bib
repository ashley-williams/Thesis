  number = {11},
  journal = {Environmental Science: Processes \& Impacts},
  doi = {10.1039/C6EM00458J},
  author = {Schwartz, Grace E. and Redfern, Lauren K. and Ikuma, Kaoru and Gunsch, Claudia K. and Ruhl, Laura S. and Vengosh, Avner and {Hsu-Kim}, Heileen},
  month = nov,
  year = {2016},
  pages = {1427-1439},
  file = {C\:\\Users\\asw\\Zotero\\storage\\Z4GW45DY\\Schwartz et al. - 2016 - Impacts of coal ash on methylmercury production an.pdf;C\:\\Users\\asw\\Zotero\\storage\\ELVDFGRX\\C6EM00458J.html}
