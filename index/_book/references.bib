  doi = {10.1016/j.jenvman.2014.07.005},
  author = {Shaheen, Sabry M. and Hooda, Peter S. and Tsadilas, Christos D.},
  month = dec,
  year = {2014},
  keywords = {Wastewater treatment,Coal fly ash,Composition,Nutrients and contaminants,Soil improvement,Soil properties},
  pages = {249-267}
}


