  number = {19},
  journal = {Applied and Environmental Microbiology},
  doi = {10.1128/AEM.01271-16},
  author = {Christensen, Geoff A. and Wymore, Ann M. and King, Andrew J. and Podar, Mircea and Hurt, Richard A. and Santillan, Eugenio U. and Soren, Ally and Brandt, Craig C. and Brown, Steven D. and Palumbo, Anthony V. and Wall, Judy D. and Gilmour, Cynthia C. and Elias, Dwayne A.},
