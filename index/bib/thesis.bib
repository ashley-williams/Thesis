  doi = {10.4319/lo.2013.58.1.0013},
  author = {Tsui, Martin Tsz Ki and Blum, Joel D. and Finlay, Jacques C. and Balogh, Steven J. and Kwon, Sae Yun and Nollet, Yabing H.},
  month = jan,
  year = {2013},
  pages = {13-22},
  file = {C\:\\Users\\asw\\Zotero\\storage\\9DCXZNHI\\Tsui et al. - 2013 - Photodegradation of methylmercury in stream ecosys.pdf;C\:\\Users\\asw\\Zotero\\storage\\T3ZCMQBQ\\abstract.html}
